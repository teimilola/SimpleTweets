<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">#55acee</item>
        <item name="colorPrimaryDark">#55acee</item>
        <item name="colorAccent">#55acee</item>
    </style>

    <style name="CustomTweetButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize"> 16sp</item>
    </style>


    <style name="counterText">
        <item name="android:textColor">#55acee</item>
        <item name="android:layout_gravity"> center_horizontal</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
        <item name="android:layout_gravity"> center_horizontal</item>
    </style>

</resources>
